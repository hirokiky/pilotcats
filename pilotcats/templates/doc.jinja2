{% extends 'base.jinja2' %}
{% block title %}{{ document.title }}{% endblock %}
{% block css %}
    {{ super() }}
    {{ document.css|safe }}
{% endblock %}
{% block relbar1 %}
    {{ document.relbar|safe }}
{% endblock %}
{% block body %}
    {{ document.body|safe }}
{% endblock %}
{% block sidebar %}
    {{ document.sidebar|safe }}
{% endblock %}
{% block relbar2 %}
    {{ document.relbar|safe }}
{% endblock %}

{%- block footer %}
    <div class="footer">
    {%- if docglobal %}
    {%- if docglobal.show_copyright %}
      &copy; Copyright {{ docglobal.copyright }}.
    {%- endif %}
    {%- if docglobal.last_updated %}
      Last updated on {{ docglobal.last_updated }}.
    {%- endif %}
    {%- if docglobal.show_sphinx %}
      Created using <a href="http://sphinx.pocoo.org/">Sphinx</a>
      {{ docglobal.sphinx_version }}.
    {%- endif %}
    {%- endif %}
    </div>
{%- endblock %}
